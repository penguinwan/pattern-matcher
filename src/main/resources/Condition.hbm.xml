<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
    <!-- CONDITION is reserved word in mysql, so CCONDITION is used -->
    <class name="com.penguinwan.pattern.matcher.domain.model.Condition" table="CCONDITION">
        <id name="id" type="long" column="ID">
            <generator class="native" />
        </id>
        <property name="subject" column="SUBJECT" type="string" length="256" />
        <property name="value" column="VALUE" type="string" length="256" />
    </class>
</hibernate-mapping>
